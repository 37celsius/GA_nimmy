<% if @result  %>

	<h4 class="subTitle medium-8 medium-centered columns">nimmy for <span class="nimmyResult"><%= @result['name'] %></span></h4>

	<div class="sectionNimmyResultDIV medium-10 medium-centered columns">
		<div class="row">
			<div class="large-4 columns">
				<div class="resultCards firstResultCard">
					<h3>Total summary</h3>
					<p>There are <span class="nimmyResultBG"><%= @result['total'] || @result['samples'] %></span> <span class="nimmyResult"><%= @result['name'] %>s</span> within your country</p>
				</div>
			</div>

			<div class="large-4 columns">
				<div class="resultCards">
					<h3>Life decisions</h3>
					<p>Mid life crisis start at <span class="nimmyResultBG"><%= @result['min_age'] %></span> and not giving a f&hellip; start at <span class="nimmyResultBG"><%= @result['max_age'] %></span></p>
				</div>
			</div>

			<div class="large-4 columns">
				<div class="resultCards">
					<h3>Fun trivia</h3>
					<p>Majority <span class="nimmyResultBG"><%= @result['gender'] %></span> with the best name is <span class="nimmyResultBG"><%= @result['best_name'] %></span></p>
				</div>
			</div>
		</div>

		<div class="chargesListSection row">
			<div class="large-12 columns">
				<% if @charges.empty?  %>
					<h4>Looks like <span class="nimmyResult"><%= @result['name'] %></span> is a good citizen <em>(no recent criminal records found)</em></h4>
				<% end %>
				<% if @charges %>

				<ul class="chargesList">
					<% @charges.each do |x| %>
						<h4>Latest criminal charges</h4>
						<li><%= x %></li>
					<% end %>
				</ul>
				<% end %>
			</div>
		</div>
		<div class="chargesListSection row">
			<div class="medium-4 medium-centered columns">
				<a class="nimmyOtherBTN" href="/" alt="nimmy others" title="nimmy others">nimmy others!</a>
			</div>
		</div>
	</div>

<% else %>

	<div class="medium-8 medium-centered columns">
	<h4 class="subTitle ">You did not enter any name</h4>
	</div>
	<div class="medium-4 medium-centered columns">
		<a class="nimmyOtherBTN" href="/" alt="nimmy others" title="nimmy others">try nimmy</a>
	</div>

<% end %>